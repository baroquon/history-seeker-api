<div class="col-md-10 col-md-offset-1">
  <h2 class="brand-heading">
    Signup
  </h2>
  <p class='intro-text'>
  Welcome all! Signup below to get started.
  </p>
  <p class='intro-text'>
  </p>
  <div id="mc_embed_signup">
    <%= form_tag charges_path do %>
      <div class='row input-grouping'>
        <div class="col-md-6">
          <div class="form-group input-group-lg">
            <label for="first_name" class='sr-only'>First Name </label>
            <input type='text' name='first_name' id='first_name' placeholder='First Name' class='form-control input-lg'>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group input-group-lg">
            <label for="last_name" class='sr-only'>Last Name </label>
            <input type='text' name='last_name' id='last_name' placeholder='Last Name' class='form-control input-lg'>
          </div>
        </div>
      </div>
      <div class="form-group input-group-lg password-group">
        <label for="password" class='sr-only'>Password<span class="asterisk">*</span>
        </label>
        <input type='password' name='password' id='password' placeholder='password' class='form-control input-lg'>
      </div>
      <div class="form-group input-group-lg password-group">
        <label for="password_confirmation" class='sr-only'>Password Confirmation<span class="asterisk">*</span>
        </label>
        <input type='password' name='password_confirmation' id='password_confirmation' class='form-control input-lg' placeholder='password confirmation'>
      </div>
      <div id='password-mismatch' style='display: none;'>
        <div class="alert alert-danger" role="alert"><span class="sr-only">Error:</span>Your password and password confirmation must match.</div>
      </div>
      <div class="form-group input-group-lg">
        <select  name="plan" id="plan" class='form-control input-lg'>
          <%= @plans.each do |plan| %>
            <option value='<%= plan[:plan] %>'><%= plan[:cost] %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group input-group-lg">
        <label for="agree_to_terms">
          <input type="checkbox" name="agree_to_terms">
          I have read and agree to the Terms and Conditions
        </label>
      </div>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="A month's subscription"
              data-amount="900"></script>
    <% end %>
  </div>
</div>
